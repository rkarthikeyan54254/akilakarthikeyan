---
interface Props {
  title: string;
  description: string;
  url: string;
  publishDate: Date;
  genre: string;
}

const { title, description, url, publishDate, genre } = Astro.props;
const formattedDate = new Date(publishDate).toLocaleDateString('ta-IN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a 
  href={url} 
  class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2"
>
  <div class="p-4 sm:p-6">
    <div class="flex items-center gap-2 mb-2">
      <h2 class="text-xl sm:text-2xl font-bold text-gray-900 line-clamp-2">{title}</h2>
    </div>
    <p class="text-gray-600 mb-4 line-clamp-3">{description}</p>
    <div class="flex flex-wrap items-center justify-between gap-2">
      <time datetime={publishDate.toISOString()} class="text-sm text-gray-500">
        {formattedDate}
      </time>
      <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
        {genre}
      </span>
    </div>
  </div>
</a>