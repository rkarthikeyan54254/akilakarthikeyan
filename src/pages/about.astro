---
import Layout from '../layouts/Layout.astro';  // Import your Layout component

// Define the image path in the frontmatter
const imagePath = '/images/about_author.jpg'; // Path to your image in the public folder
---

<Layout title="அகிலா கார்த்திகேயன் - எழுத்தாளர்">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Image rendering with alt text and styles -->
    <img src={imagePath} alt="About the Author" class="w-full rounded-lg shadow-lg" />
  </div>
</Layout>
